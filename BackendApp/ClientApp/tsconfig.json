
{
  "compilerOptions": {
    

    
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es2015.promise", "esnext"],

    
    "module": "esnext",
    "moduleResolution": "node",

    


    "outDir": "../wwwroot/js",
    "removeComments": true,
    "sourceMap": true,

    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    
    "strict": true,

    
    "skipLibCheck": true,


    "rootDir": "./scripts"
  },

  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",

    "dist",


    "../wwwroot"
  ]
}